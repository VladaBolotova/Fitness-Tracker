  <div class="testbox">
    <form action="/">
      <div class="banner">
        <h1>Upload new Workout</h1>
      </div>
      <div class="item">
        <label for="date">Date<span>*</span></label>
        <input id="date" type="date" name="date" required/>
        <i class="fas fa-calendar-alt"></i>
      </div>
      <div class="item">
        <div class="name-item">
          <div>
            <label for="duration-of-workout">Duration of Workout (Min) <span></span></label>
            <input id="duration" type="text" name="Duration" required/>
          </div>
        </div>
      </div>
      <div class="item">
        <p>Type of Workout</p>
        <select id="typeWorkout" name="typeWorkout" onchange="showTextbox(this)">
          <option value="">*Please select*</option>
          <option value="Strength">Strength</option>
          <option value="Cardio">Cardio</option>
        </select>
              <div id="strengthForm" class="s-none">
                <input id="desc" class="description" type="text" name="description" placeholder="Description" />
                <input id="weight"type="text"  name="weight" placeholder="Equipment's weight" />
                <input id="sets" type="text" name="sets"  placeholder="Number of Sets" />
                <input id="reps"type="text"  name="reps" placeholder="Number of Reps" />
              </div>
              <div id="CardioForm" class="c-none">
                <input id="desc_cardio" class="description" type="text" name="type cardio" placeholder="Description" />
                <input id="cal"type="text" name="calories" placeholder="Calories Burned" />
              </div>
              
      <div class="btn-block">
        <button id="save-btn" type="save" ><a href="/dashboard">Save</a></button>
      </div>
    </form>

  </div>
